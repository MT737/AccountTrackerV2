@model AccountTrackerV2.ViewModels.AccountViewModel

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.AccountOfInterest.Name"></label>
            <input asp-for="@Model.AccountOfInterest.Name" class="form-control" />
            <span asp-validation-for="@Model.AccountOfInterest.Name" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <div class="form-check">
            <input asp-for="@Model.AccountOfInterest.IsAsset" class="form-check-input" type="checkbox" />
            <label asp-for="@Model.AccountOfInterest.IsAsset"></label>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-check">
            <input asp-for="@Model.AccountOfInterest.IsActive" class="form-check-input" type="checkbox" />
            <label asp-for="@Model.AccountOfInterest.IsActive"></label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.AccountTransaction.Amount"></label>
            <input asp-for="@Model.AccountTransaction.Amount" class="form-control" />
            <span asp-validation-for="@Model.AccountTransaction.Amount" class="text-danger"></span>
        </div>
    </div>
</div>
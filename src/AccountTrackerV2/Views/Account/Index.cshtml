@model AccountTrackerV2.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Shared/_Message.cshtml" />
<div class="row">
    <div class="col-md-6">
        <partial name="~/Views/Shared/_IndexHeading.cshtml" />
        <div class="panel panel-default">
            <div class="panel-body" style="overflow:auto">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>Balance</th>
                            <th>Asset</th>
                            <th>Active</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.AccountsWithBalances)
                        {
                            <tr>
                                <td>@account.Name</td>
                                <td style="text-align: right">$@account.Balance.ToString("#,##0.00")</td>
                                <td>@account.IsAsset</td>
                                <td>@account.IsActive</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Account", new { id = account.AccountID })" />
                                    <span class="fas fa-edit"></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@model AccountTrackerV2.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Account" asp-action="Edit" asp-antiforgery="true" method="post" role="form">
    
    <!--TODO: Research better way to pass account ID back to controller.-->
    @Html.HiddenFor(m => m.AccountOfInterest.AccountID)

    <partial name="_AccountForm.cshtml" />

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
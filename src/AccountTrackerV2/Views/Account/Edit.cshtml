@model AccountTrackerV2.ViewModels.ApplicationViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.TransactionOfInterest.UserID)
    @Html.HiddenFor(m => m.AccountOfInterest.UserID)    

    <!--TODO: Research better way to pass transaction ID back to controller.-->
    @Html.HiddenFor(m => m.AccountOfInterest.AccountID)

    <partial name="_AccountForm.cshtml" />

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
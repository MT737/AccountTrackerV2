@model AccountTrackerV2.ViewModels.EntityViewModel
<div class="row">
    <div class="form-group">
        <label asp-for="@Model.EntityOfInterest.Name"></label>
        <input asp-for="@Model.EntityOfInterest.Name" class="form-control" />
        <span asp-validation-for="@Model.EntityOfInterest.Name" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <label asp-for="@Model.EntityOfInterest.IsDisplayed"></label>
        <input asp-for="@Model.EntityOfInterest.IsDisplayed" class="form-control" type="checkbox" />
    </div>
</div>
@model AccountTrackerV2.ViewModels.ApplicationViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!--TODO: Research better way to pass ID back to controller.-->
    @Html.HiddenFor(m => m.VendorOfInterest.VendorID)

    <div class="row">

        <div class="col-md-6">

            <h3>Are you certain you want to delete this vendor? @Model.VendorOfInterest.Name</h3>
            <p>This action cannot be undone.</p>
            <p>If so, select a vendor to absorb all transactions currently associated to the vebdor to be deleted.</p>

        </div>

    </div>
    <div class="row">

        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.AbsorptionVendor.VendorID, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.AbsorptionVendor.VendorID, Model.VendorSelectList, "", new { @class = "form-control" })
                
            </div>

        </div>

    </div>

    <div class="row">

        <div class="col-md-6">

            <button type="submit" class="btn btn-danger btn-lg margin-right">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>

            <a href="@Url.Action("Index", "Vendor")" class="btn btn-primary btn-lg marg-right">
                <span class="glyphicon glyphicon-step-backward"></span>Back
            </a>

        </div>

    </div>
}
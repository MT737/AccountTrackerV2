@model AccountTrackerV2.ViewModels.EntityViewModel

@{
    ViewData["Title"] = "Delete Vendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>



<form asp-controller="Vendor" asp-action="Delete" asp-antiforgery="true" method="post" role="form">

    <!--TODO: Research better way to pass ID back to controller.-->
    @Html.HiddenFor(m => m.EntityOfInterest.EntityID)

    <div class="row">
        <div class="col-md-6">
            <h3>Are you certain you want to delete this vendor? @Model.EntityOfInterest.Name</h3>
            <p>This action cannot be undone.</p>
            <p>If so, select a vendor to absorb all transactions currently associated to the vebdor to be deleted.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.AbsorptionEntity.EntityID"></label>
                <select asp-for="@Model.AbsorptionEntity.EntityID" class="form-control" asp-items="@Model.VendorSelectList">
                    <option></option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-danger btn-lg margin-right">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
            <a href="@Url.Action("Index", "Vendor")" class="btn btn-primary btn-lg marg-right">
                <span class="glyphicon glyphicon-step-backward"></span>Back
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model AccountTrackerV2.ViewModels.ApplicationViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <!--TODO: Research better way to pass transaction ID back to controller.-->
    @Html.HiddenFor(m => m.CategoryOfInterest.CategoryID)
    @Html.HiddenFor(m => m.CategoryOfInterest.UserID)
    
    <partial name="_CategoryForm.cshtml" />

    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
